{
  "name": "@abduljebar/pdf-reader",
  "private": true,
  "description": "A customizable PDF viewer component for React",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css",
    "./style.css": "./dist/index.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@react-pdf-viewer/scroll-mode": "^3.12.0",
    "@react-pdf-viewer/thumbnail": "^3.12.0",
    "@react-pdf-viewer/toolbar": "^3.12.0",
    "@react-pdf-viewer/zoom": "^3.12.0",
    "@react-pdf-viewer/search": "^3.12.0",
    "@react-pdf-viewer/page-navigation": "^3.12.0",
    "@react-pdf-viewer/open": "^3.12.0",
    "@react-pdf-viewer/print": "^3.12.0",
    "@react-pdf-viewer/download": "^3.12.0",
    "@react-pdf-viewer/theme": "^3.12.0",
    "@react-pdf-viewer/selection-mode": "^3.12.0",
    "@tailwindcss/vite": "^4.1.18",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  },
  "keywords": [
    "pdf",
    "viewer",
    "react",
    "component",
    "document",
    "preview"
  ],
  "author": "Abduljebar Sani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abduljebar49/Pdf-reader.git"
  },
  "bugs": {
    "url": "https://github.com/abduljebar49/Pdf-reader/issues"
  }
}
